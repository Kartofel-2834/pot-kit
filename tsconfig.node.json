{
    "extends": "@tsconfig/node20/tsconfig.json",
    "include": [
        "vite.config.*",
        "vitest.config.*",
        "cypress.config.*",
        "nightwatch.conf.*",
        "playwright.config.*",
        "preset/**/*",
        "types/**/*",
        "src/**/*",
        ".pot-kit/**/*",
        "packages/**/*",
        "vite.config.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "noEmit": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

        "module": "ESNext",
        "moduleResolution": "Bundler",
        "types": ["node"]
    }
}
