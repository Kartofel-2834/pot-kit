{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "test/**/*", "test/**/*.vue", "lib/**/*", "lib/**/*.vue"],
    "exclude": ["test/**/__tests__/*", "lib/**/__tests__/*"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        "baseUrl": ".",
        "paths": {
            "@/*": ["./lib/*"],
            "$/*": ["./test/*"]
        }
    }
}
